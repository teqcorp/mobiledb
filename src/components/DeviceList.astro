---
export const prerender = false;

import { shuffle } from "@lib/utils.ts";
import { parse } from "yaml";

const url =
  "https://raw.githubusercontent.com/teqcorp/mobiledb_database/main/devices.yml";
const response = await fetch(url);
let devices = parse(await response.text());

let lastThreeDevices = [];
let i = 0;

let devicesArray = [];

for (const oem in devices) {
  for (const device in devices[oem]) {
    devicesArray.push([oem, device, devices[oem][device]]);
  }
}

const shuffledDevices = shuffle(devicesArray);

for (const device in shuffledDevices) {
  const [oem, codename, model] = shuffledDevices[device];
  lastThreeDevices.push([oem, codename, model]);
  i++;
  if (i == 3) {
    break;
  }
}

let isLoaded = false;
---

<div class="flex flex-col gap-4">
  <p class="ml-1">Pick a device from the list or search for it above</p>
  <div
    class="grid grid-cols-1 grid-rows-3 sm:grid-cols-3 sm:grid-rows-1 gap-4 min-h-4"
  >
    {
      isLoaded ? (
        <>
          <div class="skeleton h-[92px]" />
          <div class="skeleton" />
          <div class="skeleton" />
        </>
      ) : null
    }
    {
      lastThreeDevices.map(([oem, codenamee, model]) => {
        isLoaded = true;
        return (
          <a class="card bg-base-200" href={`/${oem}/${codenamee}`}>
            <div class="card-body">
              <span class="card-title">{model}</span>
              <span>{oem}</span>
            </div>
          </a>
        );
      })
    }
  </div>
</div>
